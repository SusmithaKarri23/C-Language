#include <stdio.h>
int main()
{
    int rows, cols,i,j;
    int arr[rows][cols];
    printf("Enter the number of rows : ");
    scanf("%d", &rows);
    printf("Enter the number of columns : ");
    scanf("%d", &cols);
    printf("Enter the 2D array elements:\n");
    for (i=0;i<rows;i++) 
    {
        for (j=0;j<cols;j++)
        {
            printf("Enter element [%d][%d]: ", i, j);
            scanf("%d",&arr[i][j]);
        }
    }
    printf("\nDisplaying the 2D array:\n");
    for (i=0;i<rows;i++)
    {
        for (j=0;j<cols;j++) 
        {
            printf("%d\t ", arr[i][j]);
        }
        printf("\n");
    }
    return 0;
}
